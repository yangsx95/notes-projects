<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="config/db.properties"/>

    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true" />
        <setting name="logImpl" value="STDOUT_LOGGING" />
    </settings>

    <!--这里指定了typeHandlers，后面再查询参数或者结果上就不用设置typeHandlers了，但是所有的enum都要实现IEnum接口-->
    <typeHandlers>
        <typeHandler handler="com.yangsx95.demo.enums.MybatisEnumHandler" javaType="com.yangsx95.demo.enums.IEnum"/>
    </typeHandlers>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${h2.driver}"/>
                <property name="url" value="${h2.url}"/>
                <property name="username" value="${h2.username}"/>
                <property name="password" value="${h2.password}"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper class="com.yangsx95.demo.mapper.ComputerMapper"/>
    </mappers>

</configuration>